@model IEnumerable<WebApp.Inventario>

@{
    ViewBag.Title = "ProductoXBodega";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ProductoXBodega</h2>

<p>
    @Html.ActionLink("Crear Nuevo", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Existencia)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FechaActualizacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Precio)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bodega.Nombre)
        </th>
